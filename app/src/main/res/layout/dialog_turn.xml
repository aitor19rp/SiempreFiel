<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSuffix"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Sufijo"
        android:inputType="textPersonName"
        android:maxLength="2"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rbGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="65dp"
        android:layout_span="3"
        android:checkedButton="@+id/rbVolunteer"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbVeteran"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Veterano" />

        <RadioButton
            android:id="@+id/rbSemiVeteran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semi Veterano" />

        <RadioButton
            android:id="@+id/rbVolunteer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voluntario" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>